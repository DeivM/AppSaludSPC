<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.RecuperarContrasena"
              xmlns:view="clr-namespace:App.Views;assembly=App"
             Title="">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>

                <StackLayout Margin="20"
                         Spacing="15">

                    <Image  Source="logoinicio.png" WidthRequest="150" HeightRequest="100" Margin="0,40,0,0"
                       HorizontalOptions="Center"  />

                    <Entry Placeholder="Correo Electrónico"   Text="{Binding Email}" Keyboard="Email" FontSize="14"/>

                    <Button Text="RECUPERAR CONTRASEÑA"  Command="{Binding ButtonCommand}" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" IsEnabled="{Binding Allowed}"/>




                </StackLayout>
            </ScrollView>
        </StackLayout>


    </ContentPage.Content>

    
</ContentPage>